{
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "WebDbContext": "Data Source=(local);Initial Catalog=Auth;Integrated Security=SSPI;Pooling=True;MultipleActiveResultSets=True"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "System": "Information"
      }
    },
    "Enrich": [
      "FromLogContext",
      "WithExceptionDetails"
    ],
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "rollingInterval": "Month",
          "path": "logs/common-.txt",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{SourceContext}] [{Level}] {Message}{NewLine}{Exception}{Properties}{NewLine}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "rollingInterval": "Month",
          "path": "logs/error-.txt",
          "restrictedToMinimumLevel": "Error",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{SourceContext}] [{Level}] {Message}{NewLine}{Exception}{Properties}{NewLine}"
        }
      }
    ]
  }
}